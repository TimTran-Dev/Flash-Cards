<!doctype html>
<html>
<head>
    <title>Virtual Flash Cards!</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link rel="stylesheet" href="userpage.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<section class="container">



    <section class="row">

        <!-- LOCAL INFORMATION -->

        <section class="col-sm-6">
          <h3>Let's study!</h3>
          <button class="getAnswers" type="button" name="button">Get the answer</button>
          <button id="generate" type="submit">Generate Random Question</button>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span contenteditable="true"><%= messages[i].questions %></span>
              <span class="answer" contenteditable="true"><%= messages[i].answers %></span>
              <span class="hide"><%= messages[i]["_id"] %></span>
              <span><i class="fas fa-edit" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

          <h2>Create your flash cards</h2>
        <% if (user.local.email) { %>
          <form action="/flashcards" method="POST">
            <input type="text" placeholder="Question" name="questions">
            <input type="text" placeholder="Answer" name="answers">
            <button id="button" type="submit">Post</button>
          </form>
        </section>
        <% } %>

    </section>
    <section class="logOut">
        <a href="/logout" class="btn btn-default btn-sm">Log Out</a>
    </section>
</section>

<script src="main.js"></script>

</body>
</html>
